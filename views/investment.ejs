<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Investment Plans</title>
  <style>
    body {
      background-color: #f4f7fa;
      font-family: 'Segoe UI', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 40px 20px;
    }

    .plans-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
      width: 100%;
      max-width: 1000px;
      margin-bottom: 60px;
    }

    .plan-card {
      background-color: #ffffff;
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      padding: 30px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .plan-card:hover {
      transform: translateY(-5px);
    }

    .plan-title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
      color: #333;
    }

    .plan-amount {
      font-size: 18px;
      margin: 10px 0;
      color: #555;
    }

    .plan-percent {
      font-size: 22px;
      font-weight: bold;
      color: #4caf50;
      margin-bottom: 20px;
    }

    .btn {
      padding: 10px 20px;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.2s ease;
    }

    .btn:hover {
      background-color: #45a045;
    }

    .investments-section {
      width: 100%;
      max-width: 1000px;
      background-color: #ffffff;
      padding: 30px;
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f5f5f5;
      color: #333;
    }

    .no-investments {
      text-align: center;
      color: #999;
      font-style: italic;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <!-- Investment Plans -->
  <div class="plans-container">
    <div class="plan-card">
      <div class="plan-title">Basic Plan</div>
      <div class="plan-amount">Min: $50 | Max: $500</div>
      <div class="plan-percent">+5% Return</div>
      <button class="btn" onclick="startPlan('basic')">Start Now</button>
    </div>

    <div class="plan-card">
      <div class="plan-title">Standard Plan</div>
      <div class="plan-amount">Min: $501 | Max: $5000</div>
      <div class="plan-percent">+10% Return</div>
      <button class="btn" onclick="startPlan('standard')">Start Now</button>
    </div>

    <div class="plan-card">
      <div class="plan-title">Premium Plan</div>
      <div class="plan-amount">Min: $5001 and above</div>
      <div class="plan-percent">+20% Return</div>
      <button class="btn" onclick="startPlan('premium')">Start Now</button>
    </div>
  </div>

  <!-- Active Investments Section -->
  <div class="investments-section">
    <h2 style="font-size: 22px; margin-bottom: 15px; color: #333;">Ongoing Investments</h2>

    <% if (typeof ongoing !== 'undefined' && ongoing.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Plan</th>
            <th>Amount ($)</th>
            <th>Profit</th>
            <th>Started</th>
            <th>End Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% ongoing.forEach(invest => { %>
            <tr>
              <td><%= invest.plan %></td>
              <td><%= invest.amount %></td>
              <td><%= invest.expected_profit %></td>
              <td><%= invest.created_at %></td>
                <td><%= invest.mature_at %></td>
              <td><%= invest.status %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="no-investments">You currently have no active investments.</div>
    <% } %>
  </div>

  <script>
    function startPlan(planType) {
      console.log("Redirecting to /invest/" + planType);  // Check if this is logged
      window.location.href = `/invest/${planType}`;
    }
  </script>
  
</body>
</html>
